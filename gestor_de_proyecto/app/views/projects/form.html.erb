<h1>Create new project</h1>

<form action="/projects/create">
  <div class="form-group">
    <label for="name">Name</label>
    <input name="name" type="text" class="form-control" placeholder="name">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" class="form-control" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label for="start_date">Stared date</label>
    <input name="start_date" type="date" class="form-control" placeholder="stared date">
  </div>
  <div class="form-group">
    <label for="end_date">End date</label>
    <input name="end_date" type="date" class="form-control" placeholder="end_date">
  </div>
  <div class="form-group">
    <label for="status">Select status</label>
    <select name="status" class="form-control">
      <option>Propuesta</option>
      <option>En progreso</option>
      <option>Terminado</option>
    </select>
  </div>
  <button type="submit" class="btn btn-success">Send</button>
</form>
